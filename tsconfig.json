{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./types", "./docs", "./docker", "./dist", "./cypress", "**/*.spec.ts"]
}
